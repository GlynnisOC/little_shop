<h1>Profile Page for <%= @user.name %></h1>

<section id="profile-data">
  <h2>Order Data</h2>
  <p>Email: <%= @user.email %></p>
  <p>Role: <%= @user.role %></p>
  <aside id="address-details">
    <h3>Address:</h3>
      <p><% @user.addresses.each do |address| %></p>
      <p>
        <%= address.city %>,
        <%= address.state %>
        <%= address.zip %>
        <%= address.nickname %>
        <%= button_to "Delete Address", delete_address_path(address), method: :delete %>
        <%= button_to "Edit Address", edit_address_path(address), method: :get %>
      <% end %>
      </p>
      <p><%= link_to 'Add An Address', new_address_path unless current_admin? %></p>
  </aside>
  <p><%= link_to 'Edit Profile Data', edit_profile_path unless current_admin? %></p>
</section>

<section id="orders-data">
  <h2>Order Data</h2>
  <p><% if @user.orders.any? %>
  <%= link_to 'Customer Orders', profile_orders_path %>
  <% else %>
  You have no orders yet.
  <% end %></p>
</section>
